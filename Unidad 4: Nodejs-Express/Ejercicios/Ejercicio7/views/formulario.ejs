<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <!--Style file-->
    <!-- <link rel="stylesheet" href="../public/css/style.css" type="text/css"> -->
    <link rel="stylesheet" type="text/css"   href="/css/style.css">
    <!--Bootstrap Link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <style>
        .form-horizontal{
            margin-left: 300px;
            margin-top: 50px;
        }

        fieldset{
            border-radius: 10%;
        }

        .form-group{
            margin-bottom: 20px;
            margin-left: 50px;
        }

        button{
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="well well-sm">
                    <form class="form-horizontal" id="formulario" method="post"  action="usuario">
                        <fieldset>
                            <legend class="text-center header">SING UP</legend>
                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="dni">DNI:</label>
                                    <input id="dni" name="formUsuarioDNI" type="text" placeholder="11.111.111-A" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="fname">First Name:</label>
                                    <input id="fname" name="formUsuarioNombre" type="text" placeholder="First Name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="lname">Last Name:</label>
                                    <input id="lname" name="formUsuarioApellido" type="text" placeholder="Last Name" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="password">Password:</label>
                                    <input id="password" name="formUsuarioPassword" type="password" placeholder="8-10 characters" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="email">Email adress:</label>
                                    <input id="email" name="formUsuarioEmail" type="text" placeholder="Email Address" class="form-control">
                                </div>
                            </div>
    
                            <div class="form-group">
                                <div class="col-md-8">
                                    <label for="phone">Phone:</label>
                                    <input id="phone" name="formUsuarioTelefono" type="text" placeholder="+3 999999999" class="form-control">
                                </div>
                            </div>
    
                            <div class="form-group">
                                <div class="col-md-8 text-center">
                                    <button type="submit" class="btn btn-success btn-lg" onclick="validar()">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script defer src="js/validaciones.js"></script>
</body>
</html>